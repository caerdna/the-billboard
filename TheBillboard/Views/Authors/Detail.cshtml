@model Author

@{
    ViewData["Title"] = "Author detail";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div class="card">
        <div class="card-header">
            <small class="text-muted">Id: <strong>@Model.Id</strong></small>
        </div>
        <div class="d-flex flex-column card-body">
            <h5 class="card-title">@Model.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.Surname</h6>
            @Html.ActionLink("Edit", "Update", new { id = Model.Id }, new { @class = "btn btn-sm btn-outline-primary w-25" })
            @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-sm btn-outline-danger w-25" })
        </div>
    </div>
</div>