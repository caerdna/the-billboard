@model IEnumerable<Author>

@{
    ViewData["Title"] = "Authors";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    @Html.ActionLink("Authors", "Create", "Authors", default, new { @class = "btn btn-sm btn-outline-primary w-25" })


    <ul class="list-group list-group-flush align-items-center">
        @foreach (var author in @Model)
        {
            <li class="list-group-item">
                <div class="card">
                    <div class="d-flex flex-column card-body">
                        <h5 class="card-title">@author.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@author.Surname</h6>
                        @Html.ActionLink("Detail", "Detail", new { id = author.Id }, new { @class = "btn btn-sm btn-outline-primary w-25" })
                    </div>
                </div>
            </li>
        }
    </ul>
</div>